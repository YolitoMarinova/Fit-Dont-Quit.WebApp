@model FitDontQuit.Web.ViewModels.Articles.CreateArticleModel
@{
    this.ViewData["Title"] = "Create article";
}


<section class="admin-section">
    <h1>Create</h1>
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="container">
            <div class="col-md-12 order-md-1">
                <div class="input-group mb-4">
                    <input type="file" name="Image" asp-for="Image" />
                </div>
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Title</span>
                    </div>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Content</span>
                    </div>
                    <textarea asp-for="Content" class="form-control" maxlength="100"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <hr />
                <input type="submit" class="btn btn-primary" />
            </div>
        </div>
    </form>
</section>