@model FitDontQuit.Web.ViewModels.Articles.CreateArticleModel
@{
    this.ViewData["Title"] = "Create article";
}


<section class="section">
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="container">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-12 order-md-1">
                <div class="input-group mb-4">
                    <h3>@this.ViewData["Title"]</h3>
                </div>
                <div class="input-group mb-4">
                    <input type="file" name="Image" asp-for="Image" accept="image/*" />
                </div>
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <label asp-for="Title" class="input-group-text"></label>
                    </div>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <label asp-for="Content" class="input-group-text"></label>
                    </div>
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <hr />
                <input type="button" class="btn btn-secondary p-2" value="Back" onclick="history.back()" />
                <input type="submit" class="btn btn-primary p-2" />
            </div>
        </div>
    </form>
</section>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ],
        width: "3000"
    });
</script>