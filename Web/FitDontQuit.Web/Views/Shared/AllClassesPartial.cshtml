@model FitDontQuit.Web.ViewModels.GroupTrainings.GroupTrainingInListViewModel[]
<!-- Classes Section Begin -->
<section class="classes-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>UNLIMITED CLASSES</h2>
                </div>
            </div>
        </div>
        <div class="row classes-slider owl-carousel">
            @for (int i = 0; i < Model.Count(); i += 2)
            {
                <div class="col-lg-4">
                    <div class="single-class-item set-bg" data-setbg="@Model[i].ImageUrl">
                        <div class="si-text">
                            <h4><a asp-controller="GroupTrainings" asp-action="Details" asp-route-id="@Model[i].Id">@Model[i].Name</a></h4>
                        </div>
                    </div>
                    @if (i + 1 < Model.Count())
                    {
                        <div class="single-class-item set-bg" data-setbg="@Model[i + 1].ImageUrl">
                            <div class="si-text">
                                <h4><a asp-controller="GroupTrainings" asp-action="Details" asp-route-id="@Model[i+1].Id">@Model[i+1].Name</a></h4>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        @*<div class="row classes-slider owl-carousel">
                <div class="col-lg-4">
                    @foreach (var gp in Model)
                    {
                        <div class="single-class-item set-bg" data-setbg="@gp.ImageUrl">
                            <div class="si-text">
