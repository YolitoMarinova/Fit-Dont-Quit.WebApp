@model IEnumerable<FitDontQuit.Web.ViewModels.Trainers.TopTrainerViewModel>

<!-- Trainer Section Begin -->
<section class="trainer-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>EXPERT TRAINERS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var trainer in Model)
            {
                <div class="col-lg-4 col-md-6 mb-5 m">
                    <div class="single-trainer-item">
                        <img src="@trainer.ImageUrl" alt="TrainerImage">
                        <div class="trainer-text">
                            <h5>@trainer.FirstName @trainer.LastName</h5>
                            <span>@trainer.ProfessionName</span><br /><br />
                            <small>@trainer.Age age</small>
                            <p>@trainer.Description</p>
                            <div class="trainer-social">
                                <a href="@trainer.InstagramUrl"><i class="fa fa-instagram"></i></a>
                                <i class="fa fa-phone"> @trainer.PhoneNumber</i>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Trainer Section End -->