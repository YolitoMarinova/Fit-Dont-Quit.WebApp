@model FitDontQuit.Web.ViewModels.Administration.Halls.DeleteHallModel
@{
    this.ViewData["Title"] = "Delete hall";
}
<section class="admin-section">
    <div class="container">
        <div class="row">
            <form asp-action="Delete" method="post">
                <div class="col align-self-center">
                    <p>Are you sure you want to delete @Model.Name hall?</p>
                </div>
                <input type="button" class="btn btn-secondary" value="Back" onclick="history.back()" />
                <input type="submit" class="btn btn-danger" value="Delete" />
            </form>
        </div>
    </div>
</section>