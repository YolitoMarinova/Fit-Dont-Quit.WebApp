@model IEnumerable<FitDontQuit.Web.ViewModels.Administration.Halls.HallViewModel>
@{int counter = 1; }
@{
    this.ViewData["Title"] = "All halls";
}

<h1>@this.ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Seats</th>
            <th scope="col">Created on</th>
            <th scope="col">Modified on</th>
            <th scope="col">Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hall in Model)
        {
            <tr>
                <th scope="row">@counter</th>
                <td>@hall.Name</td>
                <td>@hall.SeatsCount</td>
                <td>@hall.CreatedOn.ToLocalTime()</td>
                @if (hall.ModifiedOn<hall.CreatedOn)
                {
                    <td>-</td>
                }
                else
                {
                    <td>@hall.ModifiedOn.ToLocalTime()</td>
                }
                <td><a asp-area="Administration" asp-controller="Halls" asp-action="Edit" asp-route-id="@hall.Id"><img src="~/icons/edit.png" /></a> / <a asp-area="Administration" asp-controller="Halls" asp-action="Delete" asp-route="@hall.Id"><img src="~/icons/rubbish.png" /></a></td>
            </tr>

            counter++;
        }
    </tbody>
</table>

<a class="btn btn-dark" asp-area="Administration" asp-controller="Halls" asp-action="Create">Create hall</a>
<a class="btn btn-dark" asp-area="Administration" asp-controller="Dashboard" asp-action="Index">Back to dashboard</a>
